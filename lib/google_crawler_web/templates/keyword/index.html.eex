<h1>Listing Keywords</h1>

<%= unless Enum.empty?(@keywords) do %>
  <table class="keyword-index table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th># Links Count</th>
        <th># Top-Adwords</th>
        <th># Non-Ad Results</th>
      </tr>
    </thead>
    <tbody>
  <%= for keyword <- @keywords do %>
    <tr>
      <td><%= link keyword.name, to: Routes.keyword_path(@conn, :show, keyword.id) %></td>
      <td><%= keyword.status %></td>
      <%= if keyword.result do %>
        <td><%= keyword.result.links_count %></td>
        <td><%= keyword.result.top_ads |> Enum.count() %></td>
        <td><%= keyword.result.non_ads |> Enum.count() %></td>
      <% else %>
        <td> </td>
        <td> </td>
        <td> </td>
      <% end %>
    </tr>
  <% end %>
    </tbody>
  </table>
<% else %>
  <p> No keywords present yet. Please <%= link "upload", to: Routes.upload_path(@conn, :new) %> a csv to begin.</p>
<% end %>
